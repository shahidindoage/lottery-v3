generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LotterySubmission {
  id               Int      @id @default(autoincrement())
  uniqueId         String   @unique @default(dbgenerated("LPAD((FLOOR(RANDOM() * 999999))::text, 6, '0')"))
  name             String
  phone            String?
  accepted_terms   Boolean
  accepted_privacy Boolean
  createdAt        DateTime @default(now())
}

